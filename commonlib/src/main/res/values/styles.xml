<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥￥-->
    <style name="MatchMatch.TextAllCaps">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MatchWrap.TextAllCaps">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WrapMatch.TextAllCaps">
        <item name="android:textAllCaps">false</item>
    </style>
    <!--$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$-->
    <!--按钮样式1-->
    <style name="MatchWrap.BtnT12C3">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/t12</item>
        <item name="android:textColor">@color/c3</item>
    </style>
    <!--按钮样式2-->
    <style name="MatchWrap.BtnT12C6">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/t12</item>
        <item name="android:textColor">@color/c6</item>
    </style>
    <!--按钮样式3-->
    <style name="MatchWrap.BtnT14C3">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/t14</item>
        <item name="android:textColor">@color/c3</item>
    </style>
    <!--按钮样式4-->
    <style name="MatchWrap.BtnT14C6">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/t14</item>
        <item name="android:textColor">@color/c6</item>
    </style>
    <style name="WrapWrap.TextAllCaps">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WrapWrap.tv12c3">
        <item name="android:textSize">@dimen/t12</item>
        <item name="android:textColor">@color/c3</item>
    </style>

    <style name="WrapWrap.tv14c3">
        <item name="android:textSize">@dimen/t14</item>
        <item name="android:textColor">@color/c3</item>
    </style>

    <style name="WrapWrap.tv16c3">
        <item name="android:textSize">@dimen/t16</item>
        <item name="android:textColor">@color/c3</item>
    </style>

    <style name="WrapWrap.tv18c3">
        <item name="android:textSize">@dimen/t18</item>
        <item name="android:textColor">@color/c3</item>
    </style>
    <!--常用在root为LinearLayout的布局-->
    <style name="MatchMatch.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchWrap.Vertical">
        <item name="android:orientation">vertical</item>
    </style>
</resources>
