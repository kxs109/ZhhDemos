        <item name="android:textAllCaps">false</item>
    </style>
    <style name="layoutWMHW.Button">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="layoutWWHM.Button">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="layoutWW.Button">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
