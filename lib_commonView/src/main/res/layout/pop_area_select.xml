<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/MatchMatch"
        android:layout_height="@dimen/x500"
        android:background="@drawable/drawable_dialog_common_bg">

        <TextView
            style="@style/text_style_main_t2"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x18"
            android:text="@string/dialog_area_selection"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/btn_close"
            style="@style/WrapWrap"
            android:layout_marginTop="@dimen/x7"
            android:padding="@dimen/x13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:background="@drawable/ic_close"
                style="@style/BtnX16" />
        </FrameLayout>
        <com.flyco.tablayout.SlidingTabLayout
            android:layout_marginTop="@dimen/x83"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tab_area_select"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x32"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:tl_indicator_gravity="BOTTOM"
            app:tl_indicator_corner_radius="@dimen/x1_5"
            app:tl_indicator_style="NORMAL"
            app:tl_tab_padding="@dimen/x18"
            app:tl_indicator_width="@dimen/x26"
            app:tl_textSelectColor="@color/color_text_main"
            app:tl_textUnselectColor="@color/color_text_main"
            app:tl_indicator_color="@color/color_theme1_p1"
            app:tl_indicator_height="@dimen/x3"
            app:tl_textsize="@dimen/t14" />
        <com.kxs109.commonview.widget.NoScrollableViewPager
            android:id="@+id/vp_area_selection"
            style="@style/MatchMatch"
            android:layout_marginTop="@dimen/x118"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>